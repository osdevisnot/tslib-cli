{
  "name": "tslib-cli",
  "version": "2.0.4",
  "description": "Maximum Overkill for Typescript Library Authors",
  "repository": "osdevisnot/tslib-cli",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "tslib": "cli.js"
  },
  "scripts": {
    "prepub": "npm run setup",
    "pub": "npm version patch && npm publish",
    "postpub": "git push --follow-tags",
    "presetup": "git clean -fdX",
    "setup": "npm install",
    "postsetup": "npm link"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css}": [
      "prettier --write",
      "git add"
    ],
    "*package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.13.1",
    "degit": "2.1.3",
    "getopts": "2.2.4",
    "jest": "24.7.1",
    "rollup": "1.8.0",
    "rollup-plugin-commonjs": "9.3.4",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-html": "0.2.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-livereload": "1.0.0",
    "rollup-plugin-minify-html-literals": "1.2.2",
    "rollup-plugin-multi-entry": "2.1.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-replace": "2.1.1",
    "rollup-plugin-serve": "1.0.1",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-typescript2": "0.20.1",
    "ts-jest": "24.0.1",
    "tslint": "5.15.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typedoc": "0.14.2",
    "typedoc-plugin-external-module-name": "2.0.0",
    "typedoc-plugin-internal-external": "2.0.1",
    "typedoc-plugin-markdown": "1.1.27",
    "typedoc-plugin-no-inherit": "1.1.6",
    "typescript": "3.4.1"
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "sort-package-json": "1.22.1"
  }
}
