{
  "name": "tslib-cli",
  "version": "3.0.4",
  "description": "Maximum Overkill for Typescript Library Authors",
  "repository": "osdevisnot/tslib-cli",
  "license": "MIT",
  "main": "rollup.config.js",
  "bin": {
    "tslib": "cli.js"
  },
  "scripts": {
    "postinstall": "sort-package-json",
    "prepub": "npm run setup",
    "pub": "npm version patch && npm publish",
    "postpub": "git push --follow-tags",
    "presetup": "git clean -fdX",
    "setup": "npm install",
    "postsetup": "npm link"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css}": [
      "prettier --write",
      "git add"
    ],
    "*package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": "@osdevisnot/prettier",
  "dependencies": {
    "@types/jest": "latest",
    "@types/node": "latest",
    "core-js": "3.1.4",
    "del": "5.0.0",
    "jest": "24.8.0",
    "ncp": "2.0.0",
    "replacestream": "4.0.3",
    "rollup": "1.17.0",
    "rollup-load-plugins": "0.4.0",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-filesize": "6.1.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-livereload": "1.0.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-serve": "1.0.1",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-typescript2": "0.22.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typedoc": "0.14.2",
    "typedoc-plugin-external-module-name": "2.1.0",
    "typedoc-plugin-internal-external": "2.0.2",
    "typedoc-plugin-markdown": "2.0.10",
    "typedoc-plugin-no-inherit": "1.1.9",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@osdevisnot/prettier": "0.1.0",
    "husky": "3.0.0",
    "lint-staged": "9.2.0",
    "sort-package-json": "1.22.1"
  }
}
