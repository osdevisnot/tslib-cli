{
  "compilerOptions": {
    "allowJs": true, // Allow JavaScript files to be compiled.
    "alwaysStrict": true, // Parse in strict mode and emit "use strict" for each source file.
    "declaration": true, // Generates corresponding '.d.ts' file.
    "declarationDir": "dist", // write declartion files to this directory
    "emitDecoratorMetadata": true, // Enables experimental support for emitting type metadata for decorators.
    "esModuleInterop": true, // Emit __importStar and __importDefault helpers for runtime babel ecosystem compatibility and enable --allowSyntheticDefaultImports for typesystem compatibility.
    "experimentalDecorators": true, // Enables experimental support for ES7 decorators.
    "jsx": "react", // Enables JSX processing
    "jsxFactory": "h", // change this to `React.createElement` when using React.
    "lib": ["es2019", "dom"], // Specify library files to be included in the compilation.
    "module": "es2015", // Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'.
    "moduleResolution": "node", // Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6).
    "noImplicitAny": false, // Raise error on expressions and declarations with an implied 'any' type.
    "noImplicitThis": false, // Raise error on 'this' expressions with an implied 'any' type.
    "outDir": "dist", // Redirect output structure to the directory.
    "resolveJsonModule": true, // allow importing json as modules
    "sourceMap": true, // Generates corresponding '.map' file.
    "strict": false, // Enable all strict type-checking options.
    "target": "es2019", // Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018' or 'ESNEXT'.
    "typeRoots": ["node_modules/@types"] // List of folders to include type definitions from.
  }
}
